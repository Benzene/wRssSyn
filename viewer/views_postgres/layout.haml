!!! Strict
%html
  %head
    %title Rss Status
    %style{:type => "text/css", :media => "screen"}
      :plain
        body {
          font-family: Arial, sans-serif;
        }  
        .post {
          border: 1px solid;
          margin-top: 10px;
          margin-bottom: 10px;
          margin-left: auto;
          margin-right: auto;
        }  
        .post_title {
          border: 1px solid;
          margin: 0px;
        }
        .post_content {
          border: 1px solid;
          margin: 0px;
        }
        .linebreak {
          clear: both;
        }
        a, a:visited {
          text-decoration: none; color: black;
          border-bottom: 1px dotted;
        }
        #header {
          heigth: 30px;
          font-family: Arial, sans-serif;
          font-weight: bold;
          font-size: 25px;
          margin: 10px;
          border: none;
        }
        #header a, a:visited {
          border: none;
        }  
        a.internal, a:visited.internal {
          border: none;
        }
        a:hover.internal {
          border-bottom: 1px dashed;
        }  
        a#has_new_posts {
          color: red;
          font-weight: bold;
        }  

  %body
    #header
      %a{:href => url('/')}
        wRssSyn : a simple rss syndicator
    = yield
    
